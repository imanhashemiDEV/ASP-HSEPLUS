@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Navigation -->
<nav class="fixed w-full bg-white/95 backdrop-blur-md shadow-sm z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 lg:h-20">
            <!-- Logo -->
            <div class="w-full flex items-center justify-center space-x-2">
                <div class="ml-4 w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-shield-alt text-white text-xl"></i>
                </div>
                <span class="text-xl font-bold text-gray-900">HSE<span class="text-primary-600">Plus</span></span>
            </div>
        </div>
    </div>
</nav>

<!-- Industries Section -->
<section id="industries" class="py-20 lg:py-32 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="w-1/2 mx-auto grid grid-cols-3 gap-6">
            <div class="bg-white rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition hover:-translate-y-1 cursor-pointer group">
                <div class="w-16 h-16 bg-yellow-100 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-yellow-500 transition">
                    <i class="fas fa-hard-hat text-2xl text-red-600 group-hover:text-white transition"></i>
                </div>
                <h4 class="font-semibold text-gray-900">ایمنی</h4>
            </div>
            <div class="bg-white rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition hover:-translate-y-1 cursor-pointer group">
                <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-red-600 transition">
                    <i class="fas fa-heart text-2xl text-blue-600 group-hover:text-white transition"></i>
                </div>
                <h4 class="font-semibold text-gray-900">بهداشت</h4>
            </div>
            <div class="bg-white rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition hover:-translate-y-1 cursor-pointer group">
                <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:bg-green-600 transition">
                    <i class="fas fa-leaf text-2xl text-green-600 group-hover:text-white transition"></i>
                </div>
                <h4 class="font-semibold text-gray-900">محیط زیست</h4>
            </div>
        </div>

        <div class="w-1/2 mx-auto mt-4">
            <form class="bg-gray-50 rounded-2xl p-8 shadow-lg">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">ورود</h3>
                <div class="grid md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">شماره پرسنلی</label>
                        <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">رمز عبور</label>
                        <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition">
                    </div>

                </div>
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">شرکت</label>
                    <select class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition">
                        <option>یک شرکت را انتخاب کنید</option>
                        <option>Workplace Safety</option>
                        <option>Occupational Health</option>
                        <option>Environmental Management</option>
                        <option>Emergency Response</option>
                        <option>Training & Education</option>
                        <option>Compliance & Audit</option>
                    </select>
                </div>
                <button type="submit" class="w-full bg-primary-600 text-white px-8 py-4 rounded-xl font-semibold hover:bg-primary-700 transition shadow-lg shadow-primary-600/30">
                    <i class="fas fa-paper-plane mr-2"></i> ورود
                </button>
            </form>
        </div>

    </div>
</section>

