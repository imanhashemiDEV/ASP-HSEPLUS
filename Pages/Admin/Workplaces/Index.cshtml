}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Workplace[0].title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workplace[0].created_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workplace[0].updated_at)
